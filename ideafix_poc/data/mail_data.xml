<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <data noupdate="0">
        
        <record id="mail_template_project_task_stage_status" model="mail.template">
            <field name="name">Task Status</field>
            <field name="email_from">${(user.company_id.email)}</field>
            <field name="subject">Task Status (${object.partner_id.name})</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="model_id" ref="ideafix_poc.model_project_task"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF;">
    <p>Hello ${object.partner_id.name},</p>
    <p>You can now track the status of your ticket by clicking on below button </p>
    <br/>
    <center>
        <a href="${object.get_portal_url()}"
            target="_blank"
            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
            Track Task
        </a>
    </center>
    <br/>
    <p>Thank You,</p>
    <p>${user.company_id.name}</p>
</div>
            </field>
        </record>
    </data>
</odoo>    
