<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="FsmGeolocationWidget">
        <button t-attf-class="btn o_tyro_paring #{widget.node.attrs.highlight? 'btn-primary':'btn-secondary'}">
            <span><t t-esc="widget.node.attrs.string"/></span>
        </button>
    </t>

    <t t-name="FontSizeWidget">
        <li class="o_font_size_menu">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">
                <span class="oe_topbar_name"/> <span class="caret"/>
            </a>
            <ul class="dropdown-menu font_size" role="menu">
                <li class="dropdown-item"><a href="#" data-menu="font_size" data-size='original'>Original</a></li>
                <li class="dropdown-item"><a href="#" data-menu="font_size" data-size='medium'>Medium</a></li>
                <li class="dropdown-item"><a href="#" data-menu="font_size" data-size='large'>Large</a></li>
            </ul>
        </li>
    </t>
</templates>